<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoEventos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="cursive"
        android:rotation="-360"
        android:rotationX="-360"
        android:rotationY="-360"
        android:text="Informacion del evento"
        android:textColor="#387878"
        android:textSize="70px"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="408dp"
        android:layout_height="628dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/nombre" />

            <EditText
                android:id="@+id/txtNombreEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:inputType="text"
                android:text="@string/nombre"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Localidad" />

            <EditText
                android:id="@+id/txtLocalidadEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:inputType="text"
                android:text="Localidad"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Ubicacion" />

            <EditText
                android:id="@+id/txtUbicacionEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:inputType="text"
                android:text="Ubicacion"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Fecha" />

            <EditText
                android:id="@+id/txtFechaEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:inputType="text"
                android:text="Fecha"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Descripcion" />

            <EditText
                android:id="@+id/txtDescripcionEv"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textViewPrecioTipo"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Preio/Tipo" />

            <EditText
                android:id="@+id/txtPrecioTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80px"
                android:ems="10"
                android:inputType="text"
                android:text="Precio/Tipo"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPuntoVenta"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Punto de venta" />

            <TextView
                android:id="@+id/tvDescAdicional"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Descripcion adicional" />

            <EditText
                android:id="@+id/editTextText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Punto de ventas"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtDescripcionAdicional"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Button"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Apuntarse"
        app:icon="@drawable/baseline_format_list_bulleted_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>